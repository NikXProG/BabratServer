{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%BASEDIR%\\Logs\\Gateway\\babrat-server-gateway-.log",
          "formatter": "Babrat.Server.Core.Logging.CustomCompactJsonFormatter, Babrat.Server.Core",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  },
  "ServerSettings": {
    "ListenAddress": "localhost",
    "ListenPort": 5055,
    "CertPath": "Cert\\server.pfx",
    "CertPassword": "123456"
  },
  "CalciteSettings" : {
    "UseDdl" : true,
    "Lex" : "MYSQL"
  },
  "ExternalApiSettings": {
    "BaseAddress": "localhost",
    "BasePort": 5056,
    "TimeoutSeconds" : 30
  },
  "AuthApiSettings": {
    "Secret" : "",
    "Issuer": "MyAppAPI",
    "Audience": "MyAppClient",
    "ExpireMinutes": 15,
    "RefreshTokenLifeTime" : 4200,
    "SecureTokenLength" : 256
  },
  "RedisSettings" : {
    "BaseAddress": "localhost",
    "BasePort": 6379
  },
  "Modules" : {
    "RESTAPI" : {
      "AssemblyName" : "Babrat.Server.REST.API.dll",
      "Enabled" : true
    },
    "Calcite": {
      "AssemblyName" : "Babrat.Server.CalciteParser.dll",
      "Enabled" : true
    }
  }

}
